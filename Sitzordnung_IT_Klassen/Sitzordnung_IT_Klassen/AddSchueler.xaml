        xmlns:local="clr-namespace:Sitzordnung_IT_Klassen"
        mc:Ignorable="d"
        Title="Schüler hinzufügen" Height="273.314" Width="350">
    <Grid Margin="0,0,0,-3">
        <TextBox HorizontalAlignment="Left" Name="Box_Name" Height="23" Margin="168,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Name="Box_Vorname" Height="23" Margin="168,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Name="Box_Betrieb" Height="23" Margin="168,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="49,40,0,0" VerticalAlignment="Top" Height="27"/>
        <Label Content="Vorname:" HorizontalAlignment="Left" Margin="49,72,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.522,-0.321"/>
        <Label Content="Beruf:" HorizontalAlignment="Left" Margin="49,103,0,0" VerticalAlignment="Top"/>
        <Label Content="Betrieb:" HorizontalAlignment="Left" Margin="49,134,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.019,0.329"/>
